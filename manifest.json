{
  "manifest_version": 3,
  "name": "映客活动小助手",
  "description": "支持公司内部批量数据下载，数据格式为CSV",
  "version": "2.0.1",
  "author": "杜振训",
  "permissions": ["downloads", "clipboardRead", "alarms"],
  "host_permissions": ["https://api.github.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}